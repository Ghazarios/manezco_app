<%= render "layouts/app_nav" do %>
  <div class="page-header  d-flex align-items-center mb-3">
    <div class='container'>
      <div class="row align-items-center">
        <div class="col-12 col-md-6">
          <h2 class='m-0 tracking-tighter'><%= @title %></h2>
          <%= yield :description %>
        </div>
        <div class="col-12 col-md-6">
          <%= yield :actions %>
        </div>
      </div>
    </div>
  </div><!-- /.page-header -->

  <div class='container'>
    <div class='row'>
      <div class="col-12">
        <%= render "layouts/flashes" %>
      </div>
    </div>
  </div>

  <%= yield %>
<% end %>
