<%= email_message_section do %>
  <%= email_message_spacer 2 %>

  <%= email_message_body_text do %>
    Hello <%= @resource.email %>! Your account has been locked due to an excessive number of unsuccessful sign in attempts. Click the link below to unlock your account:
  <% end %>

  <%= email_message_button do %>
    <%= link_to 'Unlock my account', unlock_url(@resource, unlock_token: @token), style: 'color: #fff;' %>
  <% end %>

  <%= email_message_spacer 2 %>

  <%= email_message_small_text do %>
    Any questions? Just email us.
  <% end %>

  <%= email_message_spacer 2 %>
<% end %>