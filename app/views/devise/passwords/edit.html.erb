<% @title = "Change your password" %>
<div id="main" class="devise-1">
  <div class="container-fluid">
    <div class="row">
      <header class="text-center">
        <h1><%=app_name%></h1>
        <p class="p-0 m-0 text-uppercase">Change My Password</p>
      </header>
    </div>
    <div class="row mt-5">
      <div class="col-12 col-md-6 mr-auto ml-auto">
        <div class="card">
          <div class="card-body">
            <div class="container">
              <%= form_for resource, as: resource_name, url: password_path(resource_name),
                html: { method: :put, class: "form-horizontal" } do |f| %>
                <%= f.error_notification %>

                <%= f.hidden_field :reset_password_token %>
                <%= f.error_messages_for :reset_password_token %>

                <%= f.form_group :password, class: "row" do |f| %>
                  <%= f.label :password, "New password", class: "form-label" %>
                  <%= f.password_field :password, class: "form-control" %>
                  <%= f.error_messages %>
                <% end %>

                <%= f.form_group :password_confirmation, class: "row" do |f| %>
                  <%= f.label :password_confirmation, "Confirm your new password", class: "form-label" %>
                  <%= f.password_field :password_confirmation, class: "form-control" %>
                  <%= f.error_messages %>
                <% end %>

                <div class="row d-flex align-items-center mt-5">
                  <%= f.submit "Change my password", class: "btn btn-primary ml-auto" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
