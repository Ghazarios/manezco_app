<% @title = "Request an Invite" %>

<div id="main" class="devise-1">
  <div class="container-fluid">
    <div class="row">
      <header class="text-center">
        <h1><%=app_name%></h1>
        <p class="p-0 m-0 text-uppercase">Request an invite</p>
      </header>
    </div>
    <div class="row mt-5">
      <div class="col-12 col-md-6 mr-auto ml-auto">
        <div class="card">
          <div class="card-body">
            <div class="container">
              <%= form_for resource, as: resource_name, url: invitation_path(resource_name),
                html: { class: "form-horizontal", novalidate: true } do |f| %>

                <% resource.class.invite_key_fields.each do |field| -%>
                  <%= f.form_group field, class: "row" do |f| %>
                    <%= f.label field, class: "form-label" %>
                    <%= f.text_field field, autofocus: true, class: "form-control"  %>
                    <%= f.error_messages %>
                  <% end %>
                <% end -%>

                <div class="row d-flex align-items-center mt-5">
                  <%= f.submit "Request an Invite", class: "btn btn-primary ml-auto" %>
                </div>
              <% end -%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
